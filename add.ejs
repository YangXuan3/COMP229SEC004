<%-include ../partials/header.ejs%>
<%-include ../partials/main_nav.ejs%>
  
    <!--content for the Add Page-->>
    <div class="container">
        <div class="row">
            <div class="offset-md-3 col-md-6">
                <h1><%= title %></h1>
                <form class="form" method="post">
                    <div class="form group">
                        <label for="nameTextField">Book Title</label>
                        <input type="text" class="form control" id="nameTextField" placeholder="Enter the book title" name="name" required><br>
                        <label for="authorTextField">Author</label>
                        <input type="text" class="form control" id="authorTextField" placeholder="Enter the author" name="author" required><br>
                        <label for="publishedTextField">Year</label>
                        <input type="number" class="form control" id="publishedTextField" placeholder="Enter the year of publication" name="published" required><br>
                        <label for="descriptionTextArea">Description</label>
                        <textarea type="text" class="form control" id="descriptionTextArea" placeholder="A brief description of the book" name="description" required></textarea><br>
                        <label for="priceTextField">Price</label>
                        <input type="number" class="form control" id="priceTextField" placeholder="Enter the book's price" name="price" required><br>
                        <button class="btn btn-primary" type="submit"><i class="fas fa-edit">Submit</i></button>
                        <a href="/Booklist" class="btn btn-warning"><i class="fas fa-undo">Cancel</i></a>
                    </div>

                </form>
            </div>
        </div>
    </div>
  
   

